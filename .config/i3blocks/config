# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=$HOME/.i3scripts/$BLOCK_NAME
separator_block_width=40
markup=pango
separator=true

border_top=0
border_left=0
border_right=0
border_bottom=3

[temp]
interval=1
markup=pango
label=🌡
border=#5e827d
color=#5e827d

[disk]
interval=30
label=🖴
border=#5e827d
color=#5e827d

[ram]
interval=3
label=🐏
border=#5e827d
color=#5e827d

[netssid]
interval=5
label=📶
border=#3ac5b2
color=#3ac5b2

[netstat]
interval=1
border=#3ac5b2
color=#3ac5b2

[battery]
interval=2
markup=pango
border=#68a2ca

[volume]
label=🔊
interval=1
border=#68a2ca

[time]
label=🕑
command=date '+%H:%M'
interval=5
border=#68a2ca

[date]
label=🗓
command=date '+%a %e %B'
interval=60
separator=false
border=#68a2ca

[space]
command=echo ' '
interval=once
separator=false
