[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = [+]
label-open-foreground = ${colors.c1}
label-close = [-]
label-close-foreground = ${colors.c1}
label-separator = ::
label-separator-foreground = ${colors.c1}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = /sbin/reboot

menu-2-0 = power off
menu-2-0-exec = /sbin/poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

